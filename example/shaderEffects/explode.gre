<ShaderEffect name="explode">
	<Animator name="displacement" type="float" glValue="false" min="0." max="999." step="1." ini="10."/>
	<Animator name="steps" type="int" glValue="true" min="1" max="99" step="1" ini="1"/>
	<Animator name="directions" type="int" glValue="true" min="1" max="99" step="1" ini="6"/>

	<Value name="displacementXY" type="vec2" glValue="true" value="[displacement/eTexSize[0], displacement/eTexSize[1]]"/>

	<Margin value="displacement"/>
</ShaderEffect>